{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "quotes": ["error"],
    "semi": ["error", "never"],
    "camelcase": ["off"],
    "no-unused-vars": ["error", { "vars": "local", "args": "after-used", "argsIgnorePattern": "^_" }],
    "no-confusing-arrow": 0,
    "global-require": 0,
    "react/forbid-prop-types": ["error", { "forbid": [""] }],
    "react/no-array-index-key": ["off"],
    "object-curly-newline": ["off"],
    "jsx-a11y/anchor-is-valid": ["off"],
    "react/jsx-filename-extension": ["off"]
  },
  "globals": {
    // Define test variables as global to avoid errors
    "jest": true,
    "describe": true,
    "it": true,
    "expect": true,
    "renderer": true,
    "beforeEach": true,
    "mount": true,
    "shallow": true
  }
}
